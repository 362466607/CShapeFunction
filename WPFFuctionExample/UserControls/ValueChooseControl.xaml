<UserControl x:Class="WPFFuctionExample.UserControls.ValueChooseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFFuctionExample.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="{Binding UCHeight}" d:DesignWidth="{Binding UCWidth}" >
    <Grid >
        <WrapPanel>
            <TextBox x:Name="txbInfo" Width="50" />
            <StackPanel x:Name="spButton" Width="20">
                <Button  x:Name="btnSub" Click="btnSub_Click">
                    <Button.Content>
                        <TextBlock  FontFamily="{StaticResource MyappFontFamily}" Text="&#xe619;"/>
                    </Button.Content>
                </Button>
                <Button x:Name="btnAdd" Click="btnAdd_Click">
                    <Button.Content>
                        <TextBlock  FontFamily="{StaticResource MyappFontFamily}" Text="&#xe60c;"/>
                    </Button.Content>
                </Button>
            </StackPanel>
        </WrapPanel>       
    </Grid>
</UserControl>
